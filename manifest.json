{
    "name": "Color Dropper",
    "description": "A color dropper extension which helps to select a color from website and saves it into your clipboard",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": {
        "128": "128.png",
        "64": "64.png",
        "32": "32.png",
        "16": "16.png"

    }
} 